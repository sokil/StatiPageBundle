.block.top-space
  .title Page editor
  .content
    form(method="POST")#pageEditor
      .form-group
        label Slug
        input.form-control(type="text", name="slug", value=page.get('slug'))
      ul.nav.nav-pills.bottom-space
        each locale in app.locales
          li(class=(locale === app.locale) ? "active" : null)
            a(href="#" + locale, data-toggle="pill")= locale
      .tab-content
        each locale in app.locales
          .tab-pane(id=locale, class=(locale === app.locale) ? "active" : null)
            .form-group
              label Title
              input.form-control(name="title[" + locale + "]", value = page.get('title') ? page.get('title')[locale] : null)
            .form-group
              label Text
              textarea.form-control(name="body[" + locale + "]", rows="10")= page.get('body') ? page.get('body')[locale] : null
      .form-group
        input.btn.btn-success(type="submit", value="Save")
.status